@model IEnumerable<POS.Repository.SupplierEntity>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Supplier</h2>
<a asp-action="AddSupplier" type="button" class="btn btn-outline-dark btn-sm">Tambah Supplier</a>
<p></p>
<table class="table table-striped">
    <thead>
        <tr class="table-success">
            <th>Id</th>
            <th>Company Name</th>
            <th>Contact Name</th>
            <th>Contact Title</th>
            <th>Address</th>
            <th>City</th>
            <th>Region</th>
            <th>Postal Code</th>
            <th>Country</th>
            <th>Phone</th>
            <th>Fax</th>
            <th>Homepage</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.CompanyName</td>
                <td>@item.ContactName</td>
                <td>@item.ContactTitle</td>
                <td>@item.Address</td>
                <td>@item.City</td>
                <td>@item.Region</td>
                <td>@item.PostalCode</td>
                <td>@item.Country</td>
                <td>@item.Phone</td>
                <td>@item.Fax</td>
                <td>@item.HomePage</td>
                <td>
                    <a asp-action="DetailsSupplier" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-book" viewBox="0 0 16 16">
